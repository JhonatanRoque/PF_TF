<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.empresa.rutas"
    android:gravity="center"
    android:background="@drawable/button">
    <ImageView
        android:id="@+id/Conductor"
        android:layout_width="wrap_content"
        android:layout_height="138dp"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:src="@drawable/conductor1" />
    <EditText
        android:id="@+id/edt_Nombreruta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/textverde"
        android:drawableStart="@drawable/ic_baseline_add_location_alt_24"
        android:hint=" Nombre de la ruta"
        android:inputType="text"
        android:padding="10dp"
        android:translationY="150dp" />
    <Spinner
        android:id="@+id/edt_Apellidoempl"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:translationY="229dp"
        android:entries="@array/ruta"/>

    <Button
        android:id="@+id/guardarempl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardar"
        android:translationY="349dp"
        android:translationX="30dp"/>



    <Button
        android:id="@+id/modificarruta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MODIFICAR"
        android:translationX="150dp"
        android:translationY="349dp" />

    <Button
        android:id="@+id/eliminarruta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ELIMINAR"
        android:translationX="280dp"
        android:translationY="349dp"/>

    <Button
        android:id="@+id/listarruta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LISTA"
        android:translationY="419dp" />


</FrameLayout>