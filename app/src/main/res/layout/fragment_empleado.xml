<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.empresa.empleado"
    android:gravity="center"
    android:background="@drawable/button">


    <ImageView
        android:id="@+id/conductor"
        android:layout_width="wrap_content"
        android:layout_height="138dp"
        android:scaleX="0.7"
        android:scaleY="0.7"
        android:src="@drawable/conductor" />

    <EditText
        android:id="@+id/edt_Nombreempl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/textverde"
        android:drawableStart="@drawable/ic_baseline_person_pin_24"
        android:hint=" Nombre del empleado"
        android:inputType="text"
        android:padding="10dp"
        android:translationY="110dp" />
    <EditText
        android:id="@+id/edt_Apellidoempl"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint=" Apellido del empleado"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:background="@drawable/textverde"
        android:inputType="text"
        android:drawableStart="@drawable/ic_baseline_person_pin_24"
        android:translationY="169dp" />
    <EditText
        android:id="@+id/edt_NumEmpl"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint=" Numero del empleado"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:background="@drawable/textverde"
        android:inputType="number"
        android:drawableStart="@drawable/ic_baseline_phone_24"
        android:translationY="229dp" />

    <EditText
        android:id="@+id/edt_correoEmpl"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/textverde"
        android:drawableStart="@drawable/ic_email"
        android:hint=" Correo Electronico"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:translationY="289dp" />

    <EditText
        android:id="@+id/edt_direccionEmpl"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint=" DirecciÃ³n del empleado"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:background="@drawable/textverde"
        android:inputType="text"
        android:drawableStart="@drawable/ic_baseline_add_location_alt_24"
        android:translationY="349dp"/>



    <Spinner
        android:id="@+id/rutaID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:translationY="429dp"
        android:entries="@array/valorruta"/>
    <Spinner
        android:id="@+id/autoID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:translationY="489dp"
        android:entries="@array/valorauto"/>

    <Button
        android:id="@+id/guardarempl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardar"
        android:translationY="549dp"
        android:translationX="30dp"/>



    <Button
        android:id="@+id/modificar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MODIFICAR"
        android:translationX="150dp"
        android:translationY="549dp" />

    <Button
        android:id="@+id/eliminar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ELIMINAR"
        android:translationX="280dp"
        android:translationY="549dp"/>

    <Button
        android:id="@+id/listar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LISTA"
        android:translationY="619dp" />



</FrameLayout>